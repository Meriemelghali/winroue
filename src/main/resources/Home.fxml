<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="main_home" prefHeight="569.0" prefWidth="937.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.wincom.winroue.controllers.HomeController">
    <children>
        <!-- HBox pour les boutons de contrôle -->
        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" spacing="10.0" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <Button fx:id="minimizeButton" mnemonicParsing="false" onAction="#minimize" prefHeight="24.0" prefWidth="50.0" styleClass="minimize">
                <graphic>
                    <FontAwesomeIconView glyphName="MINUS" />
                </graphic>
            </Button>
            <Button fx:id="maximizeButton" mnemonicParsing="false" onAction="#maximize" prefHeight="24.0" prefWidth="50.0" styleClass="maximize">
                <graphic>
                    <FontAwesomeIconView glyphName="EXPAND" />
                </graphic>
            </Button>
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#close" prefHeight="24.0" prefWidth="50.0" styleClass="close">
                <graphic>
                    <FontAwesomeIconView glyphName="TIMES" />
                </graphic>
            </Button>
        </HBox>

        <!-- Bouton Jouer centré -->
        <Button fx:id="jouerButton" layoutX="50.0" layoutY="224.0" mnemonicParsing="false" onAction="#handleJouerAction" prefHeight="121.0" prefWidth="149.0" text="Jouer" />
    </children>
</AnchorPane>
